/* components/list/list.wxss */
.scroll{
  width: 100%;
  height: 100%;
}
.content {
  width: 100%;
}

.title {
  display: block;
  font-size: 30px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #eee;
  padding: 0 10px;
  box-sizing: border-box;
}

.item {
  width: 100%;
  height: 50px;
  display: flex;
}

.img {
  width: 50px;
  height: auto;
  margin-right: 8px;
}

.item-text {
  display: block;
  line-height: 50px;
}
